<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RegisterByTextV">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:text="Welcome Aboard!"
            android:textColor="#1A237E"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardCodedText" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:inputType="textCapWords"
            tools:ignore="HardCodedText" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:inputType="textCapWords"
            tools:ignore="HardCodedText" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            tools:ignore="HardCodedText" />

        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            tools:ignore="HardCodedText" />

        <EditText
            android:id="@+id/linkedInURL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="LinkedIn URL"
            android:inputType="textUri"
            tools:ignore="HardCodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Who are you?"
            android:textColor="#1A237E"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardCodedText" />

        <Spinner
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="Experience Level-"
            android:textColor="#1A237E"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardCodedText" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <RadioButton
                android:id="@+id/exp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"

                android:text="No Experience"
                android:textColor="#C51162"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardCodedText" />


            <RadioButton
                android:id="@+id/exp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"

                android:text="0-5 years"
                android:textColor="#C51162"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardCodedText" />


            <RadioButton
                android:id="@+id/exp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"

                android:text="5-10 years"
                android:textColor="#C51162"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardCodedText" />

            <RadioButton
                android:id="@+id/exp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Greater than 10 years"
                android:textColor="#C51162"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardCodedText" />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Please enter your address-"
            android:textColor="#1A237E"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardCodedText" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Address"
            android:inputType="text"
            tools:ignore="HardCodedText" />


        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="State"
            android:inputType="text"
            tools:ignore="HardCodedText" />


        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:hint="Country"
            android:inputType="text"
            tools:ignore="HardCodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:text="Sign Up!"
            android:textColor="#1A237E"
            android:id="@+id/signUp"
            android:textSize="24sp"
            android:background="#F8BBD0"/>


    </LinearLayout>

</ScrollView>