<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



        <EditText
            android:id="@+id/form_opp_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:hint="Form(job posting,scholarship etc)"
            android:textColor="#AD1457"
            android:inputType="textCapWords"
            tools:ignore="HardcodedText"
            />

        <EditText
            android:id="@+id/deadline_opp_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Last Date to apply(DD-MM-YY)"
            android:textColor="#AD1457"
            android:inputType="textCapWords"
            tools:ignore="HardCodedText" />



        <EditText
            android:id="@+id/description_opp_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Description"
            android:textColor="#AD1457"
            android:inputType="textEmailAddress"
            tools:ignore="HardCodedText" />



        <Button
            android:id="@+id/submit_opp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="150dp"
            android:background="#AD1457"
            android:padding="8dp"
            android:text="Post"
            android:textColor="#FCE4EC"
            android:textSize="12sp"
            tools:ignore="HardCodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current List of available opportunities!"
            tools:ignore="HardCodedText"
            android:layout_marginLeft="13dp"
            android:textSize="15sp"
            android:textColor="#AD1457"
            android:textStyle="bold"/>




    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:drawSelectorOnTop="true"
        android:id="@+id/listView_opp"/>



</LinearLayout>
